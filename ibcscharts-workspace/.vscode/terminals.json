{
  "autorun": false,
  "autoKill": true,
  "terminals": [
    {
      "name": "ibcscharts",
      "cwd": "../../ibcscharts",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },
    {
      "name": "IBCSCharts",
      "cwd": "../../PowerBI/IBCSCharts",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },

    {
      "name": "Git push origin all",
      "commands": [
        "git -C ../../ibcscharts push origin --all",
        "git -C ../../PowerBI/IBCSCharts push origin --all",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },
    {
      "name": "Git pull upstream Development",
      "commands": [
        "git -C ../../ibcscharts pull upstream development",
        "git -C ../../PowerBI/IBCSCharts pull upstream Inforiver-Chart",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },
    {
      "name": "Git pull origin Development",
      "commands": [
        "git -C ../../ibcscharts pull origin development",
        "git -C ../../PowerBI/IBCSCharts pull origin Inforiver-Chart",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },
    {
      "name": "Git Checkout Development",
      "commands": [
        "git -C ../../ibcscharts checkout development",
        "git -C ../../PowerBI/IBCSCharts checkout Inforiver-Chart",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },
    {
      "name": "Git Checkout Matrix",
      "commands": [
        "git -C ../../ibcscharts checkout sm-matrix",
        "git -C ../../PowerBI/IBCSCharts checkout sm-matrix",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },
    {
      "name": "Npm install",
      "commands": [
        "npm ci --prefix ../../ibcscharts -OR npm install --prefix ../../ibcscharts",
        "npm ci --prefix ../../PowerBI/IBCSCharts -OR npm install --prefix ../../PowerBI/IBCSCharts",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    }
  ]
}
