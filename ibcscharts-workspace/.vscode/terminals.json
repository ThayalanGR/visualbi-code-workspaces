{
  "autorun": false,
  "autoKill": true,
  "terminals": [
    {
      "name": "ibcscharts",
      "cwd": "../../ibcscharts",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },
    {
      "name": "IBCSCharts",
      "cwd": "../../IRChartsPowerbi",
