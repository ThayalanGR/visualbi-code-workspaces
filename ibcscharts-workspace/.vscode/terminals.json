{
  "autorun": false,
  "autoKill": true,
  "terminals": [
    {
      "name": "ibcscharts",
      "cwd": "../../ibcscharts",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },
    {
      "name": "IBCSCharts",
      "cwd": "../../IRChartsPowerbi",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run start"
    },

    {
      "name": "Git push origin all",
      "commands": [
        "git -C ../../ibcscharts push origin --all",
        "git -C ../../IRChartsPowerbi push origin --all",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },
    {
      "name": "Git pull upstream Development",
      "commands": [
        "git -C ../../ibcscharts pull upstream development",
        "git -C ../../IRChartsPowerbi pull upstream development",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },
    {
      "name": "Git pull origin Development",
      "commands": [
        "git -C ../../ibcscharts pull origin development",
        "git -C ../../IRChartsPowerbi pull origin development",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },
    {
      "name": "Git Checkout Development",
      "commands": [
        "git -C ../../ibcscharts checkout development",
        "git -C ../../IRChartsPowerbi checkout development",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },
    {
      "name": "Git Checkout Matrix",
      "commands": [
        "git -C ../../ibcscharts checkout sm-matrix",
        "git -C ../../IRChartsPowerbi checkout sm-matrix",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },
    {
      "name": "Npm install",
      "commands": [
        "npm ci --prefix ../../ibcscharts -OR npm install --prefix ../../ibcscharts",
        "npm ci --prefix ../../IRChartsPowerbi -OR npm install --prefix ../../IRChartsPowerbi",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    }
  ]
}
