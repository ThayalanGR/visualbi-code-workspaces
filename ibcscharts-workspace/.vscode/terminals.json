    },
    {
      "name": "Git push origin all",
      "commands": [
        "git -C ../../ibcscharts push origin --all",
        "git -C ../../IRChartsPowerbi push origin --all",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },
    {
      "name": "Git pull upstream Development",
      "commands": [
